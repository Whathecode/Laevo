<Window
	x:Class="Laevo.View.User.UserProfilePopup"
	x:Name="Control"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:vm="clr-namespace:Laevo.ViewModel.User"
	xmlns:common="clr-namespace:Laevo.View.Common"
	d:DataContext="{d:DesignInstance Type=vm:UserViewModel}"
	Style="{StaticResource Popup}"
	WindowStartupLocation="CenterScreen"
	MinHeight="200">

	<common:LaevoPopup>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<StackPanel
				Grid.Row="0" Grid.Column="0">
				<DockPanel>
					<Label>Name</Label>
					<TextBox
						Margin="10, 0, 0, 0"
						HorizontalAlignment="Stretch"
						Text="{Binding Name}" />
				</DockPanel>
			</StackPanel>

			<!-- Save button. -->
			<Button
				Grid.Column="0"
				Grid.Row="1"
				HorizontalAlignment="Right"
				VerticalAlignment="Bottom"
				Click="OnSaveButtonClicked"
				Content="_Save" />

		</Grid>
	</common:LaevoPopup>

</Window>
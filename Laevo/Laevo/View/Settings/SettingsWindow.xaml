<Window
	x:Class="Laevo.View.Settings.SettingsWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Settings" Width="400"
	SizeToContent="Height">
	
	<Grid Margin="10">
		<DockPanel LastChildFill="False">
			<StackPanel
				DockPanel.Dock="Top"
				Orientation="Vertical">
				<Label>Time line quality</Label>
				<DockPanel>
					<TextBlock DockPanel.Dock="Left">Minimum</TextBlock>
					<TextBlock DockPanel.Dock="Right" HorizontalAlignment="Right">Maximum</TextBlock>
				</DockPanel>
				<Slider
				Value="{Binding TimeLineRenderScale}"
				Minimum="0.5"
				Maximum="1.0"
				TickPlacement="TopLeft" />
			</StackPanel>
			<Button
				Margin="0, 10, 0, 0"
				DockPanel.Dock="Bottom"
				HorizontalAlignment="Right"
				Padding="15, 2, 15, 2"
				Click="OnCloseButtonClicked">Save</Button>
		</DockPanel>
	</Grid>
	
</Window>
